<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/trailer_thumbnail"
        android:background="@color/black"
        android:layout_width="240dp"
        android:layout_height="@dimen/trailer_thumbnail_height" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_play_circle_outline_white_48dp"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/trailer_title"
    android:textColor="@color/white"
        android:background="@color/grey_alpha"
        style="@style/TextAppearance.AppCompat.Headline"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/trailer_thumbnail"
        android:layout_alignStart="@+id/trailer_thumbnail"
        android:layout_alignBottom="@+id/trailer_thumbnail"
        android:layout_alignRight="@+id/trailer_thumbnail"
        android:layout_alignEnd="@+id/trailer_thumbnail"

        android:lines="1"
        android:ellipsize="marquee" />

</RelativeLayout>